<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:tag="2"
    tools:context=".register.PhysicalFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/objetives"
            android:layout_width="416dp"
            android:layout_height="0dp"
            android:gravity="center"
            android:orientation="vertical"
            android:tag="4"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:layout_marginBottom="48dp"
                android:gravity="center"
                android:text="¿Cuál es tu nivel de ejercicio?"
                android:textSize="16sp" />

            <com.google.android.material.button.MaterialButtonToggleGroup
                android:id="@+id/physicalAct"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:gravity="center"
                android:orientation="vertical"
                app:singleSelection="true">

                <Button
                    android:id="@+id/poco"
                    style="@style/Widget.Material3.Button.ElevatedButton"
                    android:layout_width="350dp"
                    android:layout_height="64dp"
                    android:layout_marginBottom="16dp"
                    android:drawableEnd="@drawable/chevron_right_fill0_wght400_grad0_opsz24"
                    android:gravity="start|center_vertical"
                    android:tag="1"
                    android:text="Poco o ninguno" />

                <Button
                    android:id="@+id/ligero"
                    style="@style/Widget.Material3.Button.ElevatedButton"
                    android:layout_width="350dp"
                    android:layout_height="64dp"
                    android:layout_marginBottom="16dp"
                    android:drawableEnd="@drawable/chevron_right_fill0_wght400_grad0_opsz24"
                    android:gravity="start|center_vertical"
                    android:tag="2"
                    android:text="Ligero, 1-3 dias/semana" />

                <Button
                    android:id="@+id/moderado"
                    style="@style/Widget.Material3.Button.ElevatedButton"
                    android:layout_width="350dp"
                    android:layout_height="64dp"
                    android:layout_marginBottom="16dp"
                    android:drawableEnd="@drawable/chevron_right_fill0_wght400_grad0_opsz24"
                    android:gravity="start|center_vertical"
                    android:tag="3"
                    android:text="Moderado, 3-5 dias/semana" />

                <Button
                    android:id="@+id/muyActivo"
                    style="@style/Widget.Material3.Button.ElevatedButton"
                    android:layout_width="350dp"
                    android:layout_height="64dp"
                    android:layout_marginBottom="16dp"
                    android:drawableEnd="@drawable/chevron_right_fill0_wght400_grad0_opsz24"
                    android:gravity="start|center_vertical"
                    android:tag="4"
                    android:text="Muy activo, 5-7 dias/semana " />
            </com.google.android.material.button.MaterialButtonToggleGroup>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>